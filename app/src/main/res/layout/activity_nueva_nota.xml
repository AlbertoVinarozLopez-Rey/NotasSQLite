<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/fab_margin"
    android:layout_marginRight="@dimen/fab_margin"
    android:layout_marginTop="@dimen/fab_margin"
    android:orientation="vertical"
    tools:context="es.ipo2.notassqlite.NuevaNota">

    <TextView
        android:id="@+id/lblTituloN"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_weight="1"
        android:text="@string/lblTitulo"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="por ej: hacer la compra.."
        android:inputType="textPersonName"
        android:singleLine="true"
        android:text="@string/txtTitulo" />

    <TextView
        android:id="@+id/lblDescripcion"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_weight="1"
        android:text="@string/lblDescripcion"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="por ej: comprar frutas, agua, verduras.."
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:enabled="false"
        android:text="@string/btnGuardar"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="oyente_btnVolver"
        android:text="@string/btnVolver" />

</LinearLayout>
